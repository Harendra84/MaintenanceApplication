<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".maintenance.AddMaintenanceActivity">

    <EditText
        android:id="@+id/et_maintenance_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:minHeight="48dp"
        android:hint="Maintenance Type"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/et_maintenance_status"
        android:layout_width="match_parent"
        android:minHeight="48dp"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:hint="Maintenance Status"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Add Maintenance"
        android:layout_margin="10dp"/>

</LinearLayout>